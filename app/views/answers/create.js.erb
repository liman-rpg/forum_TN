<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |massage|%>
    $('.answers-errors-form').append('<p><%= j massage%></p>');
  <% end %>
<% else %>
  $('.answers').append('<%= j render 'answer', answer: @answer %>');
  $('#answer_body').val('');
  $('.answers-errors-form').empty();
<% end %>
