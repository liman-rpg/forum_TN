- if answer.persisted?
  %div{ :class => "answer", :id => "answer-id-#{answer.id}" }
    %p Author:
    %p= answer.user.email
    %p= answer.body

    - if user_signed_in? && current_user.author_of?(answer.question)
      .best-group
        - if answer.best.eql? false
          = link_to 'Set as best', best_answer_path(answer), method: :post
        - else
          %p The Best Answer

    - if user_signed_in? && current_user.author_of?(answer)
      .links
        = link_to "Edit", '', class: 'edit-answer-link', data: { answer_id: answer.id }
        .form-group
          = render 'answers/form_edit', answer: answer
        = link_to " Delete Answer", answer, method: :delete, remote: true, data: { confirm: "Are you sure?" }
