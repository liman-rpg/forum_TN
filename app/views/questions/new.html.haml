= simple_form_for(@question) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title
    = f.input :body

  .form-attachment
    %p
      = f.simple_fields_for :attachments do |file|
        = render 'attachments/attachment_fields', f: file
      .links
        = link_to_add_association 'add file', f, :attachments, partial: 'attachments/attachment_fields', f: :attachments

  .form-actions
    = f.button :submit

%p= link_to 'Back', questions_path
