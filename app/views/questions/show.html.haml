.question
  = render @question

.attachments-list
  %p
    Attachments:
    %ul
      - @question.attachments.each do |a|
        %li
          = link_to a.file.identifier, a.file.url

.answers
  %p= render @answers

- if user_signed_in?
  .answers-form
    %p= render 'answers/form'

%p= link_to 'Back', questions_path

